{
    "compilerOptions": {
        "target": "ES2018",
        "module": "commonjs",
        "lib": ["es2018"],
        "esModuleInterop": true,
        "declaration": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "skipLibCheck": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": false,
        "inlineSourceMap": true,
        "inlineSources": true,
        "experimentalDecorators": true,
        "strictPropertyInitialization": false,
        "typeRoots": ["./node_modules/@types"],
        "baseUrl": ".",
        "paths": {
            "/opt/nodejs/crypto": ["lambda-fns/layers/common/nodejs/crypto"],
            "/opt/nodejs/database": ["lambda-fns/layers/common/nodejs/database"],
            "/opt/nodejs/aws": ["lambda-fns/layers/common/nodejs/aws"],
            "/opt/nodejs/definitions": ["lambda-fns/layers/common/nodejs/definitions"],
            "/opt/nodejs/providers": ["lambda-fns/layers/common/nodejs/providers"],
            "/opt/nodejs/helpers": ["lambda-fns/layers/common/nodejs/helpers"],
            "/opt/nodejs/dataValidator": ["lambda-fns/layers/common/nodejs/dataValidator"],
            "/opt/nodejs/schemas": ["lambda-fns/layers/common/nodejs/schemas"],
            "/opt/nodejs/errors": ["lambda-fns/layers/common/nodejs/errors"],
            "/opt/nodejs/http": ["lambda-fns/layers/common/nodejs/http"],
            "/opt/nodejs/auth": ["lambda-fns/layers/common/nodejs/auth"]
        },
        "resolveJsonModule": true
    },
    "exclude": ["node_modules", "cdk.out"]
}